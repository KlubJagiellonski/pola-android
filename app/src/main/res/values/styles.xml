<resources>

    <!-- Base application theme. -->
    <style name="AppThemeWeb" parent="@style/Theme.AppCompat.Light">
        <item name="colorPrimary">@color/theme_web_primary</item>
        <item name="colorPrimaryDark">@color/theme_web_primarydark</item>
        <item name="colorAccent">@color/theme_web_accent</item>

    </style>

    <style name="AppTheme" parent="@style/Theme.AppCompat.NoActionBar">
        <item name="android:windowActionBar">false</item>
    </style>


    <style name="AppThemeLight" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowActionBar">false</item>
    </style>
    <style name="key_border">
        <item name="android:background">@drawable/key_border</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">36sp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:layout_width">@dimen/keyboard_button</item>
        <item name="android:layout_height">@dimen/keyboard_button</item>
    </style>
</resources>
